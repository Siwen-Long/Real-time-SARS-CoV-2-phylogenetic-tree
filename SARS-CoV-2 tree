
# https://docs.nextstrain.org/projects/ncov/en/latest/tutorial/example-data.html
# install package
conda install -c bioconda nextstrain-cli

# Download the ncov workflow
git clone https://github.com/nextstrain/ncov.git

# change directory
cd ncov
git clone https://github.com/nextstrain/ncov-tutorial

# Run
nextstrain build . --configfile ncov-tutorial/example-data.yaml

# If the run is problmatic, try to run without docker
nextstrain setup conda
nextstrain build . --configfile ncov-tutorial/example-data.yaml

# Visualize the results
nextstrain view auspice/ 




# example-data.yaml
# Format reference: <https://docs.nextstrain.org/projects/ncov/page/reference/workflow-config-file.html>

inputs:
  - name: reference_data
    metadata: https://data.nextstrain.org/files/ncov/open/reference/metadata.tsv.xz
    sequences: https://data.nextstrain.org/files/ncov/open/reference/sequences.fasta.xz

# GenBank data includes "Wuhan-Hu-1/2019" which we use as the root for this build.
refine:
  root: "Wuhan-Hu-1/2019"